#include <bits/stdc++.h>

using namespace std;

int main()
{
    int t,j=0, l, m;
	cin >> t;
	while(t--)
        {
		int n,cnt = 0;
		cin >> n;
        char arr[n];

		for (int i = 0; i<n; i++)
			cin >> arr[i];

		for (int k = 1; k <= n;k++){
			if (arr[k - 1] == '.')
               {
				  cnt++;
				  k += 2;
			   }

		}
		cout<<"Case "<<++j<<": "<<cnt<<endl;
	}
   return 0;
}
