#include <bits/stdc++.h>

using namespace std;

int main()
{
   int n;
   while(cin>>n){
        int ones = n / 3,center = n / 2;
    for(int i = 0; i < n; i++){
    for(int j = 0; j <n; j++){
        if (i == j && i == center)cout<<4;
        else if (i >= ones && n - i > ones && j >= ones && n - j > ones)cout<<1;
        else if(i + j == n - 1) cout<<3;
        else if(i == j) cout<<2;
        else cout<<0;
   }

    cout<<endl;
}
cout<<endl;
   }
       return 0;
}
